package array;

import java.util.Arrays;

public class ToStoredOnlyOddEle {
public static void main(String[] args) {
	int a[]= {1,2,3,4,5,6,7};
	System.out.println(Arrays.toString(isOddEle(a)));
}
public static int[] isOddEle(int a[])
{
	int count=0;
	for(int i=0;i<a.length;i++)
	{
		if(a[i]%2 !=0)
		{
			count++;
		}
	}
	int odd[]=new int[count];
	int index=0;
	for(int i=0;i<a.length;i++)
	{
		if(a[i]%2 !=0)
		{
			odd[index]=a[i];
			index++;
		}
	}
	return odd;

}

}
