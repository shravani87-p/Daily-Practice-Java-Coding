package array;

public class BinarySearchAlgorithm {
public static void main(String[] args) {
	int a[]= {1,2,3,4,5,6};
	System.out.println(binarySearch(a,4));
}
public static int binarySearch(int a[], int ele)
{
	int start=0;
	int end=a.length-1;
	while(start <= end)
	{
		int mid=(start+end)/2;
		if(a[mid]==ele)
			return mid;
		
		else if(a[mid]<ele)
			start=mid+1;
		
		else if(a[mid]>ele)
			end=mid-1;
	}
	return -1;
}
}
