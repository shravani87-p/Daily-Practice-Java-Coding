package array;

import java.util.Arrays;

public class ReplaceEvenNumWithOne {
public static void main(String[] args) {
	int a[]= {11,2,30,10};
	System.out.println(Arrays.toString(replaceEvenWithOne(a)));
}
public static int[] replaceEvenWithOne(int a[])
{
	for(int i=0;i<a.length;i++)
	{
		if(a[i]%2==0)
		{
			a[i]=1;
		}
	}
	return a;
}
}
