package array;

public class SumOfMinAndMaxEle {
public static void main(String[] args) {
	int a[]= {3,8,1,5,2};
	System.out.println(sumOfMinMaxEle(a));
}
public static int sumOfMinMaxEle(int a[])
{
	int min=a[0];
	int max=a[0];
	for(int i=0;i<a.length;i++)
	{
		if(a[i]>max)
		{
			max=a[i];
		}
		if(a[i]<min)
		{
			min=a[i];
		}
	}
	return max+min;
	
}
}
