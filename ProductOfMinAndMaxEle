package array;

public class ProductOfMinAndMaxEle {
public static void main(String[] args) {
	int a[]= {1,2,3,4,5};
	productMinMaxEle(a);
}
public static int productMinMaxEle(int a[])
{
	int min=a[0];
	int max=a[0];
	for(int i=1;i<a.length;i++)
	{
		if(a[i]>max)
		{
			max=a[i];
		}
		if(a[i]<min)
		{
			min=a[i];
		}
	}
	return min*max;
}
}
