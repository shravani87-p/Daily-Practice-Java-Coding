package array;

public class NeonNum {
public static void main(String[] args) {
	int a[]= {9,8,10};
	int neon[]=new int[a.length];
	int index=0;
	for(int num:a)
	{
		if(isNeon(num))
		{
			neon[index]=num;
			index++;
		}
	}
	System.out.println("Neon num is: ");
	for(int i=0;i<index;i++)
	{
		System.out.println(neon[i]);
	}
}
public static boolean isNeon(int num)
{
int square=num*num;
int sum=0;
while(square>0)
{
	int last=square%10;
	sum=sum+last;
	square=square/10;
}
return num==sum;
}
}
